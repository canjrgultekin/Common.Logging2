{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "Topic": "logs-topic",
    "GroupId": "logs-group",
    "Consumer": {
      "AutoOffsetReset": "Earliest",
      "SessionTimeoutMs": 10000,
      "MaxPollIntervalMs": 300000,
      "RetryPolicy": {
        "MaxRetryAttempts": 3,
        "BaseDelaySeconds": 2
      },
      "CircuitBreaker": {
        "FailureThreshold": 3,
        "DurationOfBreakSeconds": 30
      }
    },
    "Producer": {
      "RetryBackoffMs": 100,
      "MessageTimeoutMs": 30000,
      "AllowAutoCreateTopics": true,
      "TopicPartitions": 3,
      "TopicReplicationFactor": 1,
      "RetryPolicy": {
        "MaxRetryAttempts": 3,
        "BaseDelaySeconds": 2
      },
      "CircuitBreaker": {
        "FailureThreshold": 3,
        "DurationOfBreakSeconds": 30
      }
    }
  },
  "Elasticsearch": {
    "Url": "http://elasticsearch:9200",
    "Username": "elastic",
    "Password": "password"
  },
  "OpenTelemetry": {
    "ServiceName": "ApiGateway",
    "TracingLevel": "Information",
    "OtlpExporterEndpoint": "http://otel-collector:4317"
  },
  "Zipkin": {
    "Endpoint": "http://zipkin:9411/api/v2/spans"
  },
  "Jaeger": {
    "AgentHost": "jaeger",
    "AgentPort": 6831
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticsearch:9200",
          "indexFormat": "logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true
        }
      }
    ]
  },
  "Microservice1": {
    "BaseUrl": "http://microservice1:80"
  },
  "AllowedHosts": "*"
}
